<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/edit_inputItem_layout_width"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:theme="@style/EditLinkTheme">

        <LinearLayout
            android:id="@+id/edit_group_title"
            android:layout_width="@dimen/edit_inputItem_layout_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edit_title_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title" />

            <EditText
                android:id="@+id/edit_title_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/title_default"
                android:inputType="textAutoComplete|textAutoCorrect" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_group_address"
            android:layout_width="@dimen/edit_inputItem_layout_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:theme="@style/EditLinkTheme">

            <TextView
                android:id="@+id/edit_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address" />

            <EditText
                android:id="@+id/edit_address_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top|left"
                android:hint="@string/address_default"
                android:inputType="textUri|textMultiLine|textAutoComplete|textAutoCorrect"
                android:lines="8"
                android:maxLines="10"
                android:minLines="6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_group_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/edit_cancel_button"
                android:layout_width="@dimen/edit_button_width"
                android:layout_height="wrap_content"
                android:onClick="onCancelClick"
                android:text="@string/cancel" />

            <Space
                android:layout_width="@dimen/edit_button_space"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/edit_save_button"
                android:layout_width="@dimen/edit_button_width"
                android:layout_height="wrap_content"
                android:onClick="onSaveClick"
                android:text="@string/save" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>