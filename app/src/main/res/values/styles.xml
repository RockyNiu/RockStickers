<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat"></style>

    <style name="LinkTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/link_textView_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/link_listView_space_interval</item>
    </style>

    <style name="EditInputItemTheme">
        <item name="android:layout_marginTop">@dimen/edit_inputItem_layout_topMargin</item>
        <item name="android:textViewStyle">@style/EditInputTextViewStyle</item>
        <item name="android:editTextStyle">@style/EditInputEditTextStyle</item>
    </style>

    <style name="EditInputTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/edit_inputItem_textView_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditInputEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/edit_inputItem_editText_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
